@model NoChangeParking.Models.VerifyPayments

@{
    ViewBag.Title = "Check";
}

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $('.focus :input').focus();
        });
    </script>
}


<h2>No Change Parking</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Verify Payment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RegistrationPlate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2 focus">
                @Html.EditorFor(model => model.RegistrationPlate, new { htmlAttributes = new { @class = "form-control-small form-control-narrow" } } )
                 
                @Html.ValidationMessageFor(model => model.RegistrationPlate, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">

                <input type="submit" value="Check" class="btn btn-default" />

             </div>


                <div class="col-md-offset-2 col-md-8">

                    <br />
                    <br />
                    <h2>

                        <span class="TitleEstTimeClass" style="color: green">
                            @Html.DisplayFor(model => model.ValidStatusMessage)
                        </span>

                        <span class="TitleEstTimeClass" style="color: red">
                            @Html.DisplayFor(model => model.InValidStatusMessage)
                        </span>

                    </h2>
                </div>
            </div>
    </div>
}





